<Window x:Class="MockupApplication.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mockupApplication="clr-namespace:MockupApplication"
        mc:Ignorable="d" Title="MainWindow" Height="500" Width="700" ResizeMode="NoResize">
    <Window.Resources>
        <SolidColorBrush x:Key="Background" Color="#555555" />
        <SolidColorBrush x:Key="BackgroundHighlighted" Color="#888888" />
        <SolidColorBrush x:Key="Foreground" Color="#999999" />
        <SolidColorBrush x:Key="ForegroundHighlighted" Color="#FFFFFF" />
        <Duration x:Key="DropDownAnimation">0:0:0.2</Duration>
        <Style x:Key="MenuItem" TargetType="Label">
            <Setter Property="Background" Value="{StaticResource Background}" />
            <Setter Property="Foreground" Value="{StaticResource Foreground}" />
            <Setter Property="Width" Value="80" />
            <Setter Property="MinHeight" Value="26" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BackgroundHighlighted}" />
                    <Setter Property="Foreground" Value="{StaticResource ForegroundHighlighted}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--<Style x:Key="DropDownMenu" TargetType="Expander">
            <Setter Property="Background" Value="{StaticResource Background}" />
            <Setter Property="Foreground" Value="{StaticResource Foreground}" />
            <Setter Property="Width" Value="80" />
            <Setter Property="MinHeight" Value="26" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BackgroundHighlighted}" />
                    <Setter Property="Foreground" Value="{StaticResource ForegroundHighlighted}" />
                </Trigger>
            </Style.Triggers>
        </Style>-->
        <ControlTemplate x:Key="SimpleExpanderButtonTemp" TargetType="{x:Type ToggleButton}">
            <Border x:Name="ExpanderButtonBorder">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Rectangle x:Name="BackgroundRectangle" Fill="{StaticResource Background}" Grid.ColumnSpan="2" Height="26" />
                    <Ellipse Name="Circle" Grid.Column="0" Stroke="{StaticResource Foreground}" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,0,0,0" />
                    <Path x:Name="Sign" Grid.Column="0" Data="M 9.0625 6.5625 L 3.5 1 M 9.0625 5.4375 L 3.5 11" Stroke="{StaticResource Foreground}" Width="12" Height="12" StrokeThickness="1.5" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="2,0,0,0">
                        <Path.RenderTransform>
                            <RotateTransform Angle="0" />
                        </Path.RenderTransform>
                    </Path>
                    <ContentPresenter x:Name="HeaderContent" Grid.Column="1" Margin="4,0,0,0" ContentSource="Content" VerticalAlignment="Center" />
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <!--Change the sign to minus when toggled-->
                <Trigger Property="IsChecked" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="Sign"
                         Storyboard.TargetProperty=
                           "(Path.RenderTransform).(RotateTransform.Angle)"
                         To="90"
                         Duration="{StaticResource DropDownAnimation}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="Sign"
                         Storyboard.TargetProperty=
                           "(Path.RenderTransform).(RotateTransform.Angle)"
                         To="0"
                         Duration="{StaticResource DropDownAnimation}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
                <!-- MouseOver, Pressed behaviours-->
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Stroke" Value="{StaticResource ForegroundHighlighted}" TargetName="Circle" />
                    <Setter Property="Stroke" Value="{StaticResource ForegroundHighlighted}" TargetName="Sign" />
                    <Setter Property="Fill" Value="{StaticResource BackgroundHighlighted}" TargetName="BackgroundRectangle" />
                    <Setter Property="Foreground" Value="{StaticResource ForegroundHighlighted}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="SimpleExpanderTemp" TargetType="{x:Type Expander}">
            <DockPanel>
                <ToggleButton x:Name="ExpanderButton" DockPanel.Dock="Top" Template="{StaticResource SimpleExpanderButtonTemp}" Content="{TemplateBinding Header}" IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}}" OverridesDefaultStyle="True" Padding="1.5,0" Foreground="{StaticResource Foreground}" />
                <ContentPresenter x:Name="ExpanderContent" DockPanel.Dock="Bottom">
                    <ContentPresenter.LayoutTransform>
                        <ScaleTransform ScaleY="0"/>
                    </ContentPresenter.LayoutTransform>
                </ContentPresenter>
            </DockPanel>
            <ControlTemplate.Triggers>
                <Trigger Property="IsExpanded" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="ExpanderContent"
                             Storyboard.TargetProperty=
                               "(ContentPresenter.LayoutTransform).(ScaleTransform.ScaleY)"
                             To="1"
                             Duration="{StaticResource DropDownAnimation}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="ExpanderContent"
                             Storyboard.TargetProperty=
                               "(ContentPresenter.LayoutTransform).(ScaleTransform.ScaleY)"
                             To="0"
                             Duration="{StaticResource DropDownAnimation}"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save" />
                    <MenuItem Header="_Close" Click="Close_Click" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <StackPanel Width="80" Margin="0,23,0,0" Background="{StaticResource Background}" HorizontalAlignment="Left">
            <Label Content="All" Style="{StaticResource MenuItem}" />
            <Label Content="Predictive" Style="{StaticResource MenuItem}" />
            <Expander Header="Folder" Template="{StaticResource SimpleExpanderTemp}">
                <StackPanel>
                    <Label Content=" School" Style="{StaticResource MenuItem}" />
                    <Label Content=" Personal" Style="{StaticResource MenuItem}" />
                    <Label Content=" Work" Style="{StaticResource MenuItem}" />
                </StackPanel>
            </Expander>
            <Label Content="Random" Style="{StaticResource MenuItem}" />
        </StackPanel>
    </Grid>
</Window>