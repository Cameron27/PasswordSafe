<Window x:Class="MockupApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mockupApplication="clr-namespace:MockupApplication"
        mc:Ignorable="d" Title="MainWindow" Height="900" Width="1500"
        WindowStyle="None" ResizeMode="NoResize">
    <Window.Resources>
        <SolidColorBrush x:Key="TopBackground" Color="#888888" />
        <SolidColorBrush x:Key="TopBackgroundHighlighted" Color="#555555" />
        <SolidColorBrush x:Key="TopForeground" Color="#FFFFFF" />
        <SolidColorBrush x:Key="TopForegroundHighlighted" Color="#999999" />
        <SolidColorBrush x:Key="MenuBackground" Color="#555555" />
        <SolidColorBrush x:Key="MenuBackgroundHighlighted" Color="#888888" />
        <SolidColorBrush x:Key="MenuForeground" Color="#999999" />
        <SolidColorBrush x:Key="MenuForegroundHighlighted" Color="#FFFFFF" />
        <SolidColorBrush x:Key="MainBackground" Color="#EEEEEE" />
        <Duration x:Key="DropDownAnimation">0:0:0.2</Duration>
        <!-- Header Button -->
        <Style x:Key="HeaderButton" TargetType="Button">
            <Setter Property="Width" Value="33" />
            <Setter Property="Height" Value="23" />
            <Setter Property="Margin" Value="0,0,1,0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="{StaticResource TopBackground}" />
            <Setter Property="DockPanel.Dock" Value="Right" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource TopBackgroundHighlighted}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Header Button Image -->
        <Style x:Key="HeaderButtonPath" TargetType="Path">
            <Setter Property="Width" Value="33" />
            <Setter Property="Height" Value="23" />
            <Setter Property="Stroke" Value="{StaticResource TopForeground}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Button, AncestorLevel=1}, Path=IsMouseOver}" Value="True">
                    <Setter Property="Stroke" Value="{StaticResource TopBackgroundHighlighted}"></Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <!-- Resize Rectangles -->
        <Style x:Key="RectBorderStyle" TargetType="Rectangle">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Fill" Value="Transparent" />
            <Setter Property="Tag" Value="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Panel.ZIndex" Value="1"></Setter>
            <EventSetter Event="MouseLeftButtonDown" Handler="Resize_Init"/>
            <EventSetter Event="MouseLeftButtonUp" Handler="Resize_End"/>
            <EventSetter Event="MouseMove" Handler="Resizeing_Form"/>
        </Style>
        <!-- Menu Item -->
        <Style x:Key="MenuItem" TargetType="Label">
            <Setter Property="Background" Value="{StaticResource MenuBackground}" />
            <Setter Property="Foreground" Value="{StaticResource MenuForeground}" />
            <Setter Property="Width" Value="{Binding ActualWidth, ElementName=parentElementName}" />
            <Setter Property="MinHeight" Value="26" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource MenuBackgroundHighlighted}" />
                    <Setter Property="Foreground" Value="{StaticResource MenuForegroundHighlighted}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Simple Expander Button -->
        <ControlTemplate x:Key="SimpleExpanderButton" TargetType="{x:Type ToggleButton}">
            <Border x:Name="ExpanderButtonBorder">
                <Grid>
                    <Ellipse Name="Circle" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="{TemplateBinding Background}" />
                    <Path x:Name="Sign" Data="M 9.0625 6.5625 L 3.5 1 M 9.0625 5.4375 L 3.5 11" Stroke="{TemplateBinding Foreground}" Width="12" Height="12" StrokeThickness="1.5" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                        <Path.RenderTransform>
                            <RotateTransform Angle="0" />
                        </Path.RenderTransform>
                    </Path>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="Sign"
                         Storyboard.TargetProperty=
                           "(Path.RenderTransform).(RotateTransform.Angle)"
                         To="90"
                         Duration="{StaticResource DropDownAnimation}" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="Sign"
                         Storyboard.TargetProperty=
                           "(Path.RenderTransform).(RotateTransform.Angle)"
                         To="0"
                         Duration="{StaticResource DropDownAnimation}" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <!-- Drop Down Menu -->
        <ControlTemplate x:Key="DropDownMenu" TargetType="{x:Type Expander}">
            <DockPanel>
                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Rectangle x:Name="BackgroundRectangle" Fill="{StaticResource MenuBackground}" Grid.ColumnSpan="2" Height="26" />
                    <ToggleButton x:Name="ExpanderButton" Grid.Column="0" Margin="{TemplateBinding Padding}" Template="{StaticResource SimpleExpanderButton}" IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}}" OverridesDefaultStyle="True" Padding="1.5,0" Background="{StaticResource MenuBackground}" Foreground="{StaticResource MenuForeground}" />
                    <ContentPresenter x:Name="HeaderContent" Grid.Column="1" ContentSource="Header" VerticalAlignment="Center" />
                </Grid>
                <ContentPresenter x:Name="ExpanderContent" DockPanel.Dock="Bottom">
                    <ContentPresenter.LayoutTransform>
                        <ScaleTransform ScaleY="0" />
                    </ContentPresenter.LayoutTransform>
                </ContentPresenter>
            </DockPanel>
            <ControlTemplate.Triggers>
                <Trigger Property="IsExpanded" Value="True">
                    <Setter Property="Width" Value="Auto" TargetName="ExpanderContent" />
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="ExpanderContent"
                             Storyboard.TargetProperty=
                               "(ContentPresenter.LayoutTransform).(ScaleTransform.ScaleY)"
                             To="1"
                             Duration="{StaticResource DropDownAnimation}" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="ExpanderContent"
                             Storyboard.TargetProperty=
                               "(ContentPresenter.LayoutTransform).(ScaleTransform.ScaleY)"
                             To="0"
                             Duration="{StaticResource DropDownAnimation}" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsExpanded" Value="False">
                    <Setter Property="Width" Value="0" TargetName="ExpanderContent" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Foreground" Value="{StaticResource MenuForeground}" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource MenuForegroundHighlighted}" />
                    <Setter Property="Fill" Value="{StaticResource MenuBackgroundHighlighted}" TargetName="BackgroundRectangle" />
                    <Setter Property="Background" Value="{StaticResource MenuBackgroundHighlighted}" TargetName="ExpanderButton" />
                    <Setter Property="Foreground" Value="{StaticResource MenuForegroundHighlighted}" TargetName="ExpanderButton" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <!-- Region Resize Rectangles -->
        <Rectangle x:Name="leftSizeGrip" Width="7" HorizontalAlignment="Left" Cursor="SizeWE" Style="{StaticResource RectBorderStyle}" />
        <Rectangle x:Name="rightSizeGrip" Width="7" HorizontalAlignment="Right" Cursor="SizeWE" Style="{StaticResource RectBorderStyle}" />
        <Rectangle x:Name="topSizeGrip" Height="7" VerticalAlignment="Top" Cursor="SizeNS" Style="{StaticResource RectBorderStyle}" />
        <Rectangle x:Name="bottomSizeGrip" Height="7" VerticalAlignment="Bottom" Cursor="SizeNS" Style="{StaticResource RectBorderStyle}" />
        <Rectangle Name="topLeftSizeGrip"  Height="7" Width="7" HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="SizeNWSE" Style="{StaticResource RectBorderStyle}" />
        <Rectangle Name="bottomRightSizeGrip" Width="7" Height="7" HorizontalAlignment="Right" VerticalAlignment="Bottom" Cursor="SizeNWSE" Style="{StaticResource RectBorderStyle}" />
        <Rectangle Name="topRightSizeGrip" Width="7" Height="7" HorizontalAlignment="Right" VerticalAlignment="Top" Cursor="SizeNESW" Style="{StaticResource RectBorderStyle}" />
        <Rectangle Name="bottomLeftSizeGrip" Width="7" Height="7" HorizontalAlignment="Left" VerticalAlignment="Bottom" Cursor="SizeNESW" Style="{StaticResource RectBorderStyle}" />
        <!---->
        <Grid SizeChanged="Grid_SizeChanged">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" MinWidth="100" />
                <ColumnDefinition Width="6" />
                <ColumnDefinition Width="*" MinWidth="100" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="23" />
                <RowDefinition Height="23" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <DockPanel x:Name="TitleBar" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Background="{StaticResource TopBackground}" MouseLeftButtonDown="TitleBar_MouseDown">
                <Button x:Name="CloseButton" Style="{StaticResource HeaderButton}" Click="Close_Click">
                    <Path Data="M 10 5 L 23 18 M 23 5 L 10 18" Style="{StaticResource HeaderButtonPath}" />
                </Button>
                <Button x:Name="MaxButton" Style="{StaticResource HeaderButton}" RenderOptions.EdgeMode="Aliased" Click="MaximisedButton_Clicked">
                    <Path Data="M 12 7 V 5 H 23 V 16 H 21 M 10 7 H 21 V 18 H 10 V 6.5" Style="{StaticResource HeaderButtonPath}" />
                </Button>
                <Button x:Name="MinButton" Style="{StaticResource HeaderButton}" RenderOptions.EdgeMode="Aliased" Click="MinimisedButton_Clicked" >
                    <Path Data="M 10 14 L 23 14" Style="{StaticResource HeaderButtonPath}" />
                </Button>
                <Image Width="23" Height="23" HorizontalAlignment="Left" Margin="5,0,0,0" />
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="{StaticResource TopForeground}">Application Name</TextBlock>
            </DockPanel>
            <Menu x:Name="TopMenu" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Background="{StaticResource TopBackground}">
                <MenuItem Header="_File" Height="{Binding ActualHeight, ElementName=TopMenu, Mode=OneWay}" Foreground="{StaticResource TopForeground}">
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save" />
                    <MenuItem Header="_Exit" Click="Close_Click" />
                </MenuItem>
            </Menu>
            <ScrollViewer x:Name="ScrollViewer" Grid.Column="0" Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Stretch">
                <StackPanel Name="Menu" Background="{StaticResource MenuBackground}" MinWidth="{Binding ViewportWidth, ElementName=ScrollViewer, Mode=OneWay}" Width="Auto" />
            </ScrollViewer>
            <GridSplitter Grid.Column="1" Grid.Row="2" MinWidth="100" HorizontalAlignment="Stretch" />
            <Grid Grid.Column="2" Grid.Row="2" Background="{StaticResource MainBackground}"></Grid>
        </Grid>
    </Grid>
</Window>