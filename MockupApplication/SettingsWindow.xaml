<controls:MetroWindow x:Class="MockupApplication.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="http://metro.mahapps.com/winfx/xaml/shared"
    xmlns:metro="clr-namespace:MahApps.Metro;assembly=MahApps.Metro"
    Title="Settings"
    SizeToContent="WidthAndHeight"
    ResizeMode="NoResize"
    GlowBrush="{DynamicResource AccentColorBrush}"
    NonActiveWindowTitleBrush="{DynamicResource AccentColorBrush2}"
    FontFamily="{DynamicResource MainFont}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="Accent" Grid.Row="0" Grid.Column="0" Margin="5" />
        <ComboBox Name="AccentSelector" Grid.Row="0" Grid.Column="1" Margin="5" SelectionChanged="AccentSelector_Changed" ItemsSource="{x:Static metro:ThemeManager.Accents}" Height="Auto" Width="100">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Label Content="Dark Mode" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" />
        <controls:ToggleSwitch Name="DarkModeToggle" Grid.Row="1" Grid.Column="1" FontSize="12" FontFamily="{DynamicResource DefaultFont}" OffLabel="" OnLabel="" Click="DarkModeToggle_Clicked" Margin="0,0,0,0" />
        <Label Content="Font" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" />
        <ComboBox Name="FontSelector" Grid.Row="2" Grid.Column="1" Margin="5" SelectionChanged="FontSelector_Changed" ItemsSource="{Binding Source={x:Static Fonts.SystemFontFamilies}}" Height="Auto" Width="100" />
        <Label Content="Font Size" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" />
        <TextBox Name="FontSizeSelector" Grid.Row="3" Grid.Column="1" Margin="5"  Height="Auto" Width="100" KeyUp="FontSizeSelector_KeyUp" />
    </Grid>
</controls:MetroWindow>
