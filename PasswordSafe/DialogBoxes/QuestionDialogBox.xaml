<controls:MetroWindow x:Class="PasswordSafe.DialogBoxes.QuestionDialogBox"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" Title="Password Safe"
                      FontFamily="{DynamicResource MainFont}"
                      FontSize="{DynamicResource MainFontSize}"
                      GlowBrush="{DynamicResource AccentColorBrush}"
                      NonActiveWindowTitleBrush="{DynamicResource AccentColorBrush2}"
                      ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Name="Information" Grid.Row="0" Height="25" MaxWidth="300" Margin="5,5,5,0"
                   HorizontalAlignment="Left" TextWrapping="Wrap" />
        <Button Name="YesButton" Grid.Row="1" Width="100" Height="25" Margin="5,5,110,5" HorizontalAlignment="Right"
                Click="YesButton_Click" Content="Yes" />
        <Button Name="NoButton" Grid.Row="1" Width="100" Height="25" Margin="0,5,5,5" HorizontalAlignment="Right"
                Click="NoButton_Click" Content="No" IsCancel="True" IsDefault="True" />
    </Grid>
</controls:MetroWindow>